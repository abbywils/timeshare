<p id="notice"><%= notice %></p>

<div class="p-5 container">
  <h1>Countries</h1>
</div>

<div class="p-5 container">
  <table class="table .thead-dark table-hover table-responsive">
    <thead>
      <tr>
        <th>Countryname</th>
        <th>Region</th>
        <th colspan="3"></th>
      </tr>
    </thead>
  
    <tbody>
      <% @countries.each do |country| %>
        <tr>
          <td><%= country.countryname %></td>
          <td><%= country.region %></td>
          <td><%= link_to 'Show', country, class: 'btn btn-primary' %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div

<%= will_paginate @countries %>

<br>